{
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "plugins": [
        "react"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "indent": ["error", 4],
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4],
        "comma-dangle": ["error", "never"],
        "max-len": [1,200],
        "semi": ["error", "never"],
        "no-trailing-spaces": "error",
        "consistent-return": 0,
        "prefer-promise-reject-errors": 0,
        "import/prefer-default-export": 0
    }
}
